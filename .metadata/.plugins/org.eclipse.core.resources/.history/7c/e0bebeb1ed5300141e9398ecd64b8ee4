#ifndef QUEUE_H_
#define QUEUE_H_

//#include "stages.h"
#include "samples.h"

typedef struct Node {
    struct s_samples* item;
    struct Node* next;
} Node;

typedef struct List {

	Node* head;
    Node* tail;
    int size;

    // add item to tail
    void (*add) (struct List*, struct s_samples*);

    // get item from head and remove it from queue
    s_samples* (*pop) (struct Queue*);

    // get item from head but keep it in queue
    s_samples* (*peek) (struct Queue*);

    // size of this queue

} Queue;

void add(Queue* queue, s_samples* item);

s_samples* pop (Queue* queue);
s_samples* peek (Queue* queue);
Queue createQueue ();

#endif /* QUEUE_H_ */
